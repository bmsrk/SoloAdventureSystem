@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<div class="mud-page" style="font-family:var(--font-base, 'Courier New', monospace); color:var(--text-primary)">
    <h1>Counter</h1>
    <p role="status">Current count: @currentCount</p>
    <button class="mud-btn" type="button" @onclick="IncrementCount">Click me</button>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
